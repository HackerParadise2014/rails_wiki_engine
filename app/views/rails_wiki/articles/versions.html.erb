<div class="row">
  <div class="col-md-12">
    <%= link_to "Back", @article %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="widget widget-table">
      <div class="widget-header">

        <h3><i class="fa fa-tag"></i>Change History</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">

        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Date</th>
            <th>Event</th>
            <th>User</th>
            <th>Changes</th>
          </tr>
          </thead>
          <tbody>
          <% @article.versions.each do |history|%>
              <tr>
                <td><%= history.created_at %></td>
                <td><%= history.event %></td>
                <td><%= history.version_author %></td>
                <td>
                  <% history.changeset.each_with_index do |change,index| %>
                      <%= change[0] %>
                      <% if change[0] == 'text' %>
                          <%= Differ.diff_by_word(change[1][1], change[1][0]).to_s.html_safe %>
                      <% else %>
                          <b><%= change[0] %></b> <%= change[1][0] %> to <%= change[1][1] %>
                      <% end %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
